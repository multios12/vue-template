{
  "name": "vue-template",
  "description": "vue.js & Express & Bootstrap4を使用したWebページを作成するためのテンプレート",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/server.js",
    "build": "webpack --mode development && tsc",
    "release": "webpack --mode production",
    "watch": "run-p watch.*",
    "watch.ts": "nodemon --ext ts --watch src -x tsc",
    "watch.bundle": "nodemon --ext ts,html,vue --watch src/public -x webpack --mode development"
  },
  "dependencies": {
    "axios": "0.18.0",
    "bootstrap-vue": "2.0.0-rc.11",
    "compression": "1.7.2",
    "debug": "2.6.9",
    "express": "4.16.3",
    "http-errors": "1.6.3",
    "jquery": "3.3.1",
    "morgan": "1.9.0",
    "vue": "2.5.16",
    "vue-router": "3.0.1"
  },
  "devDependencies": {
    "@types/express": "4.16.0",
    "@types/jquery": "3.3.4",
    "copy-webpack-plugin": "4.5.2",
    "css-loader": "1.0.0",
    "file-loader": "1.1.11",
    "html-webpack-plugin": "3.2.0",
    "moment": "2.22.2",
    "nodemon": "1.17.5",
    "npm-run-all": "4.1.3",
    "ts-loader": "4.4.2",
    "typescript": "2.9.2",
    "vue-loader": "15.2.4",
    "vue-template-compiler": "2.5.16",
    "webpack": "4.15.1",
    "webpack-cli": "3.0.8"
  }
}
